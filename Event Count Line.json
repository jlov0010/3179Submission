  "params": [
    {
      "name": "selectedType",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Foot", "Mountain Bike", "Ski", "Trail"],
        "labels": ["All", "Foot", "Mountain Bike", "Ski", "Trail"],
        "name": "Select Orienteering Type: "
      }
    }
  ],

  "transform": [
    {"filter": "selectedType == 'All' || datum.Type == selectedType"}
  ],

  "mark": {"type": "area"},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "title": "Year",
      "axis": {"labelAngle": 0, "tickCount": 10}
    },
    "y": {
      "field": "Events",
      "type": "quantitative",
      "stack": "zero",
      "title": "Number of Events"
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "title": "Orienteering Type",
      "scale": {
        "domain": ["Foot", "Mountain Bike", "Ski", "Trail"],
        "range": ["#377eb8", "#e41a1c", "#4daf4a", "#984ea3"]
      },
      "legend": {"title": "Type"}
    },
    "tooltip": [
      {"field": "Year", "type": "quantitative"},
      {"field": "Type", "type": "nominal"},
      {"field": "Events", "type": "quantitative"}
    ]
  },

  "view": {"stroke": null}
}
